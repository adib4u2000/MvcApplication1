                <option>AM</option>
                <option>KP</option>
                <option>SM</option>
                <option>UL</option>
                <option>NS</option>
            </select>
            @Html.DropDownListFor(model => model.Friends, new SelectList(new List<string>() { "10", "15", "25", "50", "100", "1000" }, "15"), new { @class = "data-change" })
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
